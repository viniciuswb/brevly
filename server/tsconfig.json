{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 22",
	"_version": "20.0.0",

	"compilerOptions": {
		"lib": ["es2024"],
		"module": "esnext",
		"target": "esnext",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "bundler",

		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
